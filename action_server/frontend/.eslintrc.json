{
  "root": true,
  "extends": ["@robocorp/eslint-config-frontend"],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["~", "./src"]],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": "warn",
    "import/no-extraneous-dependencies": ["error", { "devDependencies": ["**/*.test.ts"] }]
  }
}
